<% include _header %>
<div class="row container">
    <div class="col-md-12">
        <form action="/zombies/edit/<%= zombie.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="name" value="<%= zombie.name %>" required>
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="text" class="form-control" name="email" value="<%= zombie.email %>" required>
            </div>
            <div class="form-group">
                <label for="">Tipo</label>
                <input type="text" class="form-control" name="type" value="<%= zombie.type %>" required>
            </div>
            <button class="btn btn-primary"><i class="fas fa-skull"></i> Editar Zombie </button>
        </form>
    </div>
</div>
<% include _footer %>